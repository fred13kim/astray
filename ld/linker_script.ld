ENTRY(Reset_Handler)

MEMORY {
    FLASH(rx)   : ORIGIN = 0x08000000, LENGTH = 512K
    SRAM(rwx)   : ORIGIN = 0x20000000, LENGTH = 128K
}

SECTIONS {
    .isr_vector : {
        . = ALIGN(4);
        KEEP(*(.isr_vector)) /* Startup code */
        . = ALIGN(4);
    } > FLASH

    .text : {
        . = ALIGN(4);
        *(.text*)
        . = ALIGN(4);
    } > FLASH

    .data : {
        . = ALIGN(4);
        *(.data*)
        . = ALIGN(4);
    } > SRAM AT > FLASH

    .bss : {
        . = ALIGN(4);
        *(.bss*)
        . = ALIGN(4);
    } > SRAM
}
